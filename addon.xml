<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="context.cinemavision" name="CinemaVision - Context Launcher" version="0.0.1" provider-name="CinemaVision">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
    <import addon="script.cinemavision" version="0.0.28"/>
  </requires>
  <extension point="kodi.context.item" library="addon.py">
    <item>
      <label>32000</label>
      <visible>Container.Content(movies)</visible>
    </item>
  </extension>
  <extension point="kodi.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Open CinemaVision player from video library</summary>
    <description lang="en">Play your queued movies with the CinemaVision theater experience from your library</description>
    <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    <forum>http://cinemavision.tv/forums/</forum>
    <website>http://www.cinemavision.tv/</website>
    <source>https://github.com/CinemaVision/context.cinemavision</source>
  </extension>
</addon>
